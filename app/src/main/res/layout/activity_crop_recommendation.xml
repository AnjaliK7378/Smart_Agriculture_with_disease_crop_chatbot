<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".CropRecommendationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Crop Recommendation"
                android:textColor="#1B5E20"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Soil Parameters Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#A5D6A7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soil Parameters"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2">

                        <EditText
                            android:id="@+id/inputN"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:hint="Nitrogen (N) ppm"
                            android:inputType="numberDecimal"
                            android:background="@android:color/white"
                            android:padding="10dp"
                            android:layout_margin="4dp"/>

                        <EditText
                            android:id="@+id/inputP"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:hint="Phosphorus (P) ppm"
                            android:inputType="numberDecimal"
                            android:background="@android:color/white"
                            android:padding="10dp"
                            android:layout_margin="4dp"/>

                        <EditText
                            android:id="@+id/inputK"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:hint="Potassium (K) ppm"
                            android:inputType="numberDecimal"
                            android:background="@android:color/white"
                            android:padding="10dp"
                            android:layout_margin="4dp"/>

                        <EditText
                            android:id="@+id/inputPh"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:hint="pH Value"
                            android:inputType="numberDecimal"
                            android:background="@android:color/white"
                            android:padding="10dp"
                            android:layout_margin="4dp"/>
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Environmental Factors Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#C8E6C9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Environmental Factors"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/inputLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City or Location"
                        android:background="@android:color/white"
                        android:padding="10dp"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinnerSeason"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Predict Button -->
            <Button
                android:id="@+id/btnFindCrops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:text="Find Best Crops"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="24dp"/>

            <!-- Result Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRecommendationResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Recommendation"
                        android:textColor="#1B5E20"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/txtRecommendedCrop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop: N/A"
                        android:textColor="#2E7D32"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtRecommendationReason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reason: N/A"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/txtOtherOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other options: N/A"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp"/>

</RelativeLayout>